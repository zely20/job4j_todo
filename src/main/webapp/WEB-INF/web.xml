<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>ru.job4j.todo.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/index.html</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>AddTask</servlet-name>
        <servlet-class>ru.job4j.todo.servlet.AddTaskServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowAll</servlet-name>
        <servlet-class>ru.job4j.todo.servlet.ShowAllItemsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MarkReady</servlet-name>
        <servlet-class>ru.job4j.todo.servlet.MarkReadyItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowCurrentTask</servlet-name>
        <servlet-class>ru.job4j.todo.servlet.ShowCurrentTaskServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>ru.job4j.todo.servlet.AuthServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegServlet</servlet-name>
        <servlet-class>ru.job4j.todo.servlet.RegServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetUserName</servlet-name>
        <servlet-class>ru.job4j.todo.servlet.UserNameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetCategories</servlet-name>
        <servlet-class>ru.job4j.todo.servlet.CategoriesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddTask</servlet-name>
        <url-pattern>/addtask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowAll</servlet-name>
        <url-pattern>/showAll</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MarkReady</servlet-name>
        <url-pattern>/markReady</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowCurrentTask</servlet-name>
        <url-pattern>/showCurrentTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegServlet</servlet-name>
        <url-pattern>/reg.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetUserName</servlet-name>
        <url-pattern>/getusername</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetCategories</servlet-name>
        <url-pattern>/getcategories</url-pattern>
    </servlet-mapping>

</web-app>
        